/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.tab-box{
  width: 100%;
  display: flex;
}
.tab-box>view{
  flex: 1;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}
.tab-box>view.hover{
  font-weight: bold;
}
.tab-box>view.hover .bar-border{
  width: 45rpx;
  height: 8rpx;
  border-radius: 4rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  background: #29c572;
}
.module-1 {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.vanSearchBox{
  margin-top: 30rpx;
}
.van-search{
  padding: 0 !important;
}


